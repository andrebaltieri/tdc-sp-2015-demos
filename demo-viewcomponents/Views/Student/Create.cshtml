@model MvcDi.Models.Student
@addtaghelper "Microsoft.AspNet.Mvc.TagHelpers"

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
	
<div class="container">	
	<form asp-controller="Student" asp-action="Create" method="post" asp-anti-forgery="true">  
	    <div asp-validation-summary="ValidationSummary.ModelOnly">
	    <div class="form-group">
	        <label asp-for="Name"></label>
	        <input asp-for="Name" class="form-control" />
	        <span asp-validation-for="Name"></span>
	    </div>
	    <div class="form-group">
	        <label asp-for="Email"></label>
	        <input asp-for="Email" class="form-control" />
	        <span asp-validation-for="Email"></span>
	    </div>
		
		<button type="submit" class="btn btn-default">Submit</button>
	</form>  
	
	<a asp-action="Index" class="btn btn-default">Voltar</a>
</div>